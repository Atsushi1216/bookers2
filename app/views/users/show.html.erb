<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
  <table class="table">
<div>
  <tr><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: '/assets/images/no_image.jpg'%></tr>
  <p>name:　<%= @user.name %></p>
  <p>Introduction：<%= @user.introduction %> </p>
</div>
  </table>
  <div class="row">
  <%= link_to '設定', edit_user_path(current_user), class: "btn btn-secondary" %>
  </div>
   <%= form_with model: @book, local:true do |f| %>
  <h2 class="mt-3">New book</h2>
  <h4>Title</h4>
  <%= f.text_field :Title, class:"form-control" %>
  <h4>Opinion</h4>
  <%= f.text_field :body, class:"form-control" %>
  <%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>
</div>

 <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <table>
 <% @books.each do |book| %>
<div>
  <tr>
  <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: '/assets/images/no_image.jpg'%></td>
  <td><%= link_to book.Title, book_path(book.id) %></td>
  <td><%= book.body %></td>
  </tr>
</div>
<% end %>
</table>
    </div>
  </div>
</div>