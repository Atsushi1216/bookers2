<div>
<%=   flash[:notice]  %>
</div>
<div>
<% if @book.errors.any? %>
 <Strong><%= @book.errors.count %>  errors occur!  :</Strong>
 <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
  </ul>
<% end %>
</div>

<%= render 'books/list', books: @books %>

 <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <table>
 <% @books.each do |book| %>
<div>
  <tr>
  <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: '/assets/images/no_image.jpg'%></td>
  <td><%= link_to book.title, book_path(book.id) %></td>
  <td><%= book.body %></td>
  </tr>
</div>
<% end %>
</table>
    </div>
  </div>
</div>