<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
  <table class="table">
<div>
  <tr><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: '/assets/images/no_image.jpg'%></tr>
  <p>name:　<%= current_user.name %></p>
  <p>Introduction：<%= current_user.introduction %> </p>
</div>
  </table>
  <div class="row">
  <%= link_to '設定', edit_user_path(current_user), class: "btn btn-secondary" %>
  </div>
   <%= form_with model: @book, local:true do |f| %>
  <h2 class="mt-3">New book</h2>
  <h4>Title</h4>
  <%= f.text_field :Title, class:"form-control" %>
  <h4>Opinion</h4>
  <%= f.text_field :body, class:"form-control" %>
  <%= f.submit "Create Book", class: "btn btn-success" %>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
    <table class="table">
      <tbody><tr>
        <td>
  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: '/assets/images/no_image.jpg'%><br>
  <p><%= link_to @book.user.name, user_path(@book.user.id) %></p></td>
  <td><p><%= link_to @book.Title, book_path(@book.id) %></p></td>
  <td><p><%= @book.body %></p></td>
  <% if @book.user == current_user %>
  <td><%= link_to("Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success") %></td>
  <td><%= link_to("Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger") %></td>
  <% end %>
    </tr>
  </tbody></table>
</div>