<% if users.exists? %>
  <% users.each do |user| %>
      <table class="table">
      <thead>
        <tr>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: '/assets/images/no_image.jpg'%></td>
          <td><%= user.name %></td>
          <td>フォロー数：<%= user.followings.count %></td>
          <td>フォロワー数：<%= user.followers.count %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>
